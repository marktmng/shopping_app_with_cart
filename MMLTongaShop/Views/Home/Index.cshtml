@model ModelClasses.ViewModel.HomePageVM

<div class="bg-light border rounded" style="margin: 20px 0px 20px 0px">
    <div class="text-end">
        <form asp-action="Index" method="get">

            <div class="row m-2">
                <div class="col-md-6 col-lg-8 col-sm-12">
                    <h6 class="text-dark text-center font-weight-bold " style="font-size: 25px">Welcome to our Online Shopping Page</h6>
                </div>
                <div class="col-md-6 col-lg-4 col-sm-12">

                    <div class="d-flex justify-content-end">

                        <input asp-for="searchByName" placeholder="search by name" class="form-control rounded-left" />
                        <button type="submit" class="btn btn bg-primary text-white font-weight-bold"> <i class=" fas fa-search"></i></button>
                    </div>
                </div>
            </div>

           @*  <a asp-action="Index">Back to full List</a> *@
        </form>
    </div>
</div>

<div class="row">

    <div class="col-2 bg-white border-start-0 border-end-1 border-top-0 border-bottom-0 border-secondary- d-none d-sm-block" style="border: solid #FF6700">
        <p style="color:#FF6700"><strong>Search by Categories</strong></p>
        <hr style="color:#FF6700" />

        @if (Model.Categories.Count() > 0)
        {
            <div>
                @foreach (var item in Model.Categories)
                {
                    <div class="pb-2">
                        <strong><a asp-action="Index" asp-route-searchByCategory="@item.Name" class="text-dark"><i class="fa fa-hand-point-right fa-lg " style="color: #FF4D01;">&nbsp </i>@item.Name</a></strong>
                    </div>
                }
            </div>
        }
        <hr style="color:#FF6700" />

        <!-- first carousel from bootstrap -->
        <p style="color:#FF6700"><strong>Most Bought Items</strong></p>

        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/handicraft.jpg" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/vase.webp" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/Wooden.jpeg" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <hr style="color:#FF6700" />

        <!-- second carousel bootstrap -->
        <p style="color:#FF6700"><strong>On Seasonal Sales</strong></p>
        
        <div id="carouselExampleCaptions2" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/stone_art_oss.jpg" class="d-block w-100" alt="..." />
                    @* <img src="~/images/stone_art.jpg" class="d-block w-100" alt="..."> *@
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/home_decorative_oss.jpg" class="d-block w-100" alt="..."/>
                    @* <img src="~/images/home_decorative.jpg" class="d-block w-100" alt="..."> *@
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/plates_oss.jpg" class="d-block w-100" alt="..."/>
                    @* <img src="~/images/plates.jpg" class="d-block w-100" alt="..."> *@
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>


    </div>
    <div class="col-10">
        <div class="bg-light border rounded">


            @if (Model.ProductList.Count() > 0)
            {
                <div class="row d-flex justify-content-center">
                    @foreach (var item in Model.ProductList)
                    {
                        <div class="col-lg-3 col-md-6 mg-1 py-1 col-sm-auto"> <!-- card size -->
                            <div class="card single-item" style="box-shadow: 0 2px 4px 0 #FF6700, 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                                <div class="img-container">

                                    <a asp-action="ProductDetails" asp-controller="Home" asp-route-id="@item.Id">
                                        <img src="~/Images/@item.HomeImgUrl" class="card-img-top rounded"
                                             style="width: 250px; height: 250px; max-width: 100%" />
                                    </a>
                                    <h3>
                                        <span class="store-item-icon" style="padding:30px;">
                                            $@item.Price
                                        </span>
                                    </h3>
                                </div>
                                <div class="card-body bg-light">
                                    <div class="row card-text text-capitalize">
                                        <div class="col-lg-10 col-md-9 col-sm-6">

                                            <p style="padding-left:25px" id="store-item-name"><strong>@item.Name</strong></p>

                                            <div class="col-lg-6 col-md-3 col-sm-6 text-end">

                                                <button type="button" class="btn btn-info mb-2" style="background: linear-gradient(to bottom, #FF4D01, #F7A400); height: 40px; width: 150px" onclick="location.href='@Url.Action("ProductDetails", "Home", new { id = item.Id })'">
                                                    View Details
                                                </button>
                                            </div>

                                            <br/>

                                            <div class="col-lg-6 col-md-3 col-sm-6 text-end">
                                                <button type="button" class="btn btn-primary" style="background: linear-gradient(to bottom, #FF4D01, #F7A400); height: 40px; width: 150px" onclick="location.href='@Url.Action("AddToCart", "Cart", new { productId = item.Id })'">
                                                    Add to Cart
                                                </button>
                                            </div>
                                        </div>
                                     </div>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

        </div>
    </div>
</div>
