@model ModelClasses.ViewModel.CustomerVM

@{
    ViewData["Title"] = "Edit Customer";
    ViewData["HideFooter"] = true;
}

<h2>Edit Customer</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ContactNumber"></label>
        <input asp-for="ContactNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ShoppingActivityCounter">Shopping Activity</label>
        <div class="input-group">
            <button type="button" class="btn btn-default" onclick="decrementCounter()">-</button>
            <input asp-for="ShoppingActivityCounter" class="form-control text-center" readonly />
            <button type="button" class="btn btn-default" onclick="incrementCounter()">+</button>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LatestShopDate">Latest Order Date</label>
        <input asp-for="LatestShopDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <script>
        function incrementCounter() {
            var counter = document.getElementById('ShoppingActivityCounter');
            counter.value = parseInt(counter.value) + 1;
        }

        function decrementCounter() {
            var counter = document.getElementById('ShoppingActivityCounter');
            if (parseInt(counter.value) > 0) {
                counter.value = parseInt(counter.value) - 1;
            }
        }
    </script>
}
